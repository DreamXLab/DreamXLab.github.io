---
layout: default
---
{% comment %}
  Project layout · Apple-style hero — v10
  ---------------------------------------------------------
  • Buttons now wrapped in `.hero-cta` flex container so “Learn more” 与
    “Play intro video” 横向并排、自动间距、随屏宽自适应。
{% endcomment %}

{%- if page._styles -%}
  <style>
    {{ page._styles }}
  </style>
{%- endif -%}

<style>
  :root { --bg:#ffffff; --accent:#0071e3; --radius:24px; --transition:.3s ease; }
  @media (prefers-color-scheme: dark){ :root{ --bg:#000000; --accent:#0a84ff; } }
  body{margin:0;background:var(--bg);color:var(--text,#000);font-family:-apple-system,BlinkMacSystemFont,"Helvetica Neue",Helvetica,Arial,sans-serif;scroll-behavior:smooth;}

  .project-page,.project-page *{color:#fff!important;} .project-page a{text-decoration:none;} .project-page a:hover,.project-page a:focus{text-decoration:underline;}

  /* Sticky internal nav */
  .project-nav{position:sticky;top:0;z-index:1000;background:rgba(0,0,0,.9);backdrop-filter:saturate(180%) blur(20px);-webkit-backdrop-filter:saturate(180%) blur(20px);padding:0 .5rem;border-bottom:1px solid rgba(255,255,255,.06);}
  .project-nav ul{display:flex;justify-content:center;gap:2.5rem;list-style:none;margin:0;padding:.75rem 0;} .project-nav a{font-size:.95rem;font-weight:500;letter-spacing:.02em;text-transform:capitalize;} .project-nav a.active{text-decoration:underline;}

  /* Overview hero */
  #overview{position:relative;min-height:100dvh;display:flex;flex-direction:column;align-items:center;justify-content:center;text-align:center;overflow:hidden;}
  #overview::before{content:"";position:absolute;inset:0;background:url('{{ page.banner | default: page.img | relative_url }}') center/cover no-repeat;transform:scale(1.08);z-index:-2;}}
  #overview::after{content:"";position:absolute;inset:0;background:rgba(0,0,0,.45);z-index:-1;}
  .intro__title{margin:0 0 .6rem;font-size:clamp(2.8rem,7vw,4.5rem);font-weight:700;letter-spacing:-.02em;}
  .intro__desc{margin:0 auto 3rem;max-width:740px;font-size:clamp(1.15rem,2.4vw,1.5rem);opacity:.9;}

  /* CTA buttons */
  .hero-cta{display:flex;justify-content:center;align-items:center;gap:1rem;margin-top:.25rem;flex-wrap:wrap;}
  .btn{display:inline-block;padding:.9rem 2.2rem;border-radius:100px;font-size:.95rem;font-weight:600;transition:background var(--transition),opacity var(--transition);} .btn-primary{background:var(--accent);} .btn-outline{border:2px solid #fff;} .btn:hover{opacity:.85;}

  /* Hero video */
  #intro-video{position:relative;width:100%;height:100dvh;overflow:hidden;} #intro-video video,#intro-video img{position:absolute;inset:0;width:100%;height:100%;object-fit:cover;} #intro-video video.ready{opacity:1;transition:opacity .6s ease;}

  /* Sections */
  section:not(#overview):not(#intro-video){padding:6rem 1rem;max-width:1100px;margin:0 auto;} .section-title{margin-bottom:3rem;font-size:clamp(1.75rem,3vw,2.25rem);text-align:center;}

  /* Video grid */
  .video-grid{display:grid;gap:2rem;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));}
  .video-card iframe,.video-card video{width:100%;aspect-ratio:16/9;border:0;border-radius:var(--radius);} .video-meta{margin-top:.75rem;} .video-title{margin:0 0 .25rem;font-size:1.125rem;font-weight:600;} .video-desc{margin:0;font-size:.95rem;opacity:.75;}

  /* Slides */
  .slides{display:grid;gap:1.5rem;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));}
  .slide-item img{width:100%;border-radius:var(--radius);} .slide-desc{margin-top:.5rem;font-size:.9rem;opacity:.8;}

  /* Reveal */
  .reveal{opacity:0;transform:translateY(40px);transition:opacity .8s,transform .8s;} .reveal--visible{opacity:1;transform:none;}
</style>

<main class="project-page">
  <!-- Internal nav -->
  <nav class="project-nav" aria-label="Project navigation">
    <ul>
      <li><a href="#overview">Overview</a></li>
      <li><a href="#videos">Videos</a></li>
      <li><a href="#slides">Slides</a></li>
    </ul>
  </nav>

  <!-- Hero overview -->
  <section id="overview">
    <h1 class="intro__title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="intro__desc">{{ page.description }}</p>
    {% endif %}
    <div class="hero-cta">
      <a class="btn btn-outline" href="#slides">Learn more</a>
      <a class="btn btn-primary" href="#intro-video">Play intro video</a>
    </div>
  </section>

  <!-- Intro video -->
  <section id="intro-video">
    {% if page.videos.first.url %}
      <video
        src="{{ page.videos.first.url | relative_url }}"
        poster="{{ page.videos.first.cover | relative_url }}"
        autoplay
        muted
        controls
        playsinline
      ></video>
    {% elsif page.img %}
      <img src="{{ page.img | relative_url }}" alt="{{ page.title }} cover">
    {% endif %}
  </section>

  <!-- Videos list -->
  {% if page.videos.list %}
    <section id="videos" class="reveal">
      <h2 class="section-title">Videos</h2>
      <div class="video-grid">
        {% for vid in page.videos.list %}
          <div class="video-card">
            {% if vid.url contains 'mp4' %}
              <video src="{{ vid.url | relative_url }}" controls muted playsinline></video>
            {% else %}
              <iframe
                src="https://www.youtube.com/embed/{{ vid.url }}?rel=0&modestbranding=1&playsinline=1"
                title="{{ vid.title }}"
                loading="lazy"
                allowfullscreen
              ></iframe>
            {% endif %}
            <div class="video-meta">
              <h3 class="video-title">{{ vid.title }}</h3>
              <p class="video-desc">{{ vid.description }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>
  {% endif %}

  <!-- Slides -->
  {% if page.slides.list %}
    <section id="slides" class="reveal">
      <h2 class="section-title">Slides</h2>
      <div class="slides">
        {% for slide in page.slides.list %}
          <figure class="slide-item">
            <img src="{{ slide.url | relative_url }}" alt="{{ slide.description }}">
            <figcaption class="slide-desc">{{ slide.description }}</figcaption>
          </figure>
        {% endfor %}
      </div>
    </section>
  {% endif %}
</main>

<script>
  /* Fade-in hero video */
  const heroVid = document.querySelector('#intro-video video');
  if (heroVid) heroVid.addEventListener('loadeddata', () => heroVid.classList.add('ready'));

  /* Reveal on scroll */
  const obs = new IntersectionObserver(
    (es) =>
      es.forEach((e) => {
        if (e.isIntersecting) {
          e.target.classList.add('reveal--visible');
          obs.unobserve(e.target);
        }
      }),
    { threshold: 0.2 }
  );
  document.querySelectorAll('.reveal').forEach((el) => obs.observe(el));

  /* Nav active highlight */
  const secs = ['overview', 'videos', 'slides'];
  function setActive() {
    const y = window.scrollY + 100;
    secs.forEach((id) => {
      const s = document.getElementById(id);
      const l = document.querySelector(`.project-nav a[href="#${id}"]`);
      if (!s || !l) return;
      y >= s.offsetTop && y < s.offsetTop + s.offsetHeight ? l.classList.add('active') : l.classList.remove('active');
    });
  }
  window.addEventListener('scroll', setActive);
  window.addEventListener('load', setActive);
</script>
